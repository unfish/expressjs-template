extends ../layout

block content
  h1= title
  p Welcome to #{title}
  #userlist.content
    if error
        p= error
    if users
        ul
            each u in users
                li(id='#{u.id}') 姓名：#{u.username} 手机：#{u.mobile} 注册时间：
                    span.timeSpan= u.created_at
                    最后登录：
                    span.timeSpan= u.updated_at
                    button.btn.btn-xs.btn-danger(onclick="AjaxPost('/user/delete/#{u.id}',{},this,function(){$('##{u.id}').remove();});return false;") 删除
