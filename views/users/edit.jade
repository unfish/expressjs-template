extends ../layout

block content
  #infoedit.content
      form#formInfo.formLarge
        #email.input-group
            span.input-group-addon 邮　箱
            input.form-control(type="text",name="email",value="#{user.email}")
        span.error-block
        #mobile.input-group
            span.input-group-addon 手　机
            input.form-control(type="text",name="mobile",value="#{user.mobile}")
        span.error-block
        #username.input-group
            span.input-group-addon 姓　名
            input.form-control(type="text",name="username",value="#{user.username}")
        span.error-block
        #password.input-group
            span.input-group-addon 密　码
            input.form-control(type="password",name="password")
        span.error-block
        p
        button.btn.btn-primary.btn-block#btnSave 保存修改
        span.error-block
        
block script
    script(type='text/javascript').
        require(['jquery', 'ajax'], function ($, ajax) {
            $(function(){
                $(document).on('click', '#btnSave', function(e){
                    ajax.SubmitForm('/api/user/edit','formInfo',e.target,function(json){location.href='/';});
                });
            });
        });