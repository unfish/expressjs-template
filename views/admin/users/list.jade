extends ../layout

block content
    nav.navbar.navbar-default
        form.navbar-form.navbar-left(role="search")
            .form-group
                label.sr-only 搜索
                input.form-control(type="text",placeholder="Search")
            button.btn.btn-default(type="submit") 搜索
    table.table.table-striped
        thead
            tr
                th 姓名
                th 手机
                th 邮箱
                th 注册时间
                th 最后登录
                th 操作
        tbody
            if users
                each u in users
                    tr(id='#{u.id}')
                        td= u.username
                        td= u.mobile
                        td= u.email
                        td
                            span.timeSpan= u.created_at
                        td
                            span.timeSpan= u.updated_at
                        td
                            button.btn.btn-xs.btn-danger(onclick="return DeleteUser('#{u.id}')") 删除
    != pager

block script
    script(type='text/javascript').
        function DeleteUser(id){
            AjaxPost('/admin/users/delete/'+id,{},this,function(){$('#'+id).remove();});
            return false;
        }